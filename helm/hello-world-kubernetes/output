---
# Source: hello-world-kubernetes/templates/serviceaccount.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: hello-world-kubernetes-release-name
  labels:
    app.kubernetes.io/name: hello-world-kubernetes
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.0.0"
---
# Source: hello-world-kubernetes/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: hello-world-kubernetes-release-name
  labels:
    app.kubernetes.io/name: hello-world-kubernetes
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.0.0"
spec:
  type: LoadBalancer
  ports:
    - port: 3000
      targetPort: http
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: hello-world-kubernetes
    app.kubernetes.io/instance: release-name
  externalIPs:
    - 192.168.44.10
---
# Source: hello-world-kubernetes/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-world-kubernetes-release-name
  labels:
    app.kubernetes.io/name: hello-world-kubernetes
    app.kubernetes.io/instance: release-name
    app.kubernetes.io/version: "1.0.0"
spec:
  replicas: 2
  selector:
    matchLabels:
      app.kubernetes.io/name: hello-world-kubernetes
      app.kubernetes.io/instance: release-name
  template:
    metadata:
      labels:
        app.kubernetes.io/name: hello-world-kubernetes
        app.kubernetes.io/instance: release-name
    spec:
      serviceAccountName: hello-world-kubernetes-release-name
      containers:
        - name: hello-world-kubernetes
          image: "alupuleasa/hello-world-kubernetes:v1.0.0"
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /
              port: http
          readinessProbe:
            httpGet:
              path: /
              port: http
          env:
          - name: KUBERNETES_NAMESPACE
            valueFrom:
              fieldRef:
                fieldPath: metadata.namespace
          - name: KUBERNETES_POD_NAME
            valueFrom:
              fieldRef:
                fieldPath: metadata.name
          - name: KUBERNETES_NODE_NAME
            valueFrom:
              fieldRef:
                fieldPath: spec.nodeName
          - name: CONTAINER_IMAGE
            value: "alupuleasa/hello-world-kubernetes:v1.0.0"
      nodeSelector:
        kubernetes.io/arch: amd64
        kubernetes.io/os: linux
